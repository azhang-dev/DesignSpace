<h2><%= @project.title %></h2>
<% if @current_user.present? and @project.user_id == @current_user.id %>

    <%= link_to 'Edit Project', edit_project_path(@project.id) %>
    |
    <%= link_to 'Delete Project', destroy_project_path(@project.id) %>
   
<% end %>
<br>
<p>
<strong>Location: </strong>
<%= @project.location %> 
</p>

<p>
<strong>Description: </strong>
<%= @project.description %> 
</p>


<%= image_tag @project.image_url, alt: @project.title, class: "project_image" %>

