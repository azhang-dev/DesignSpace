<h2>Login</h2>



<% if flash[:error] %>
  <br>
  <strong>
    <%= flash[:error] %>
  </strong>
  <br>
  <br>
<% end %>
<%#
  We can also use the form_with helper for generic forms that do NOT correspond to a model;
  to do this, we use 'url: SOME_URL_HERE' instead of 'model: @YOURMODEL'
 %>
<%= form_with url: login_path, local: true do |f| %>
  <%= f.label :email,:class => "form-label"  %>
  <br>
  <%= f.text_field :email,:class => "form-control" %>
  <br><br>

  <%= f.label :password,:class => "form-label"  %>
  <br>
  <%= f.password_field :password,:class => "form-control" %>
  <br><br>

  <%= f.submit 'Login' %>
<% end %>