<section class = "user_profile_details">
    <h3>Profile</h3>
    
    <h5><%= @user.name %></h5>
   
    <p>
    <strong>Studio: </strong>
    <%= @user.studio %>
    </p>


    <p>
    <strong>Studio Location: </strong>
    <%= @user.location %>
    </p>
    <p>
    <strong>Website: </strong>
    <%= @user.studio_url %>
    </p>

    <p>
    <strong>Followers: </strong>

    </p>
</section>


<div class = "user_profile_projects" >
    <h3><strong>Recent Projects: </strong></h3>
    <ul>
        <% @user.projects.each do |project| %>
            <li>
                <%= link_to cl_image_tag(project.image, class: 'index_image'), project_path(project.id) %> 
            </li>
        <% end %>
    </ul>  
</div>