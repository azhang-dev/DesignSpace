<%= form_for @current_user do |f| %>

    <%= f.label :email, :class => "form-label" %>
    <%= f.text_field :email,:class => "form-control" %>
    <br>
    <%= f.label :password, :class => "form-label" %>
    <%= f.password_field :password, placeholder: 'Password',:class => "form-control" %>
    <br>
    <%= f.label :password, 'Confirm Password', :class => "form-label"%>
    <%= f.password_field :password_confirmation, placeholder: 'Confirm Password',:class => "form-control" %>
    <br>
    <%= f.label :name, :class => "form-label" %>
    <%= f.text_field :name,:class => "form-control" %> 
    <br>
    <%= f.label :studio, :class => "form-label" %>
    <%= f.text_field :studio,:class => "form-control" %> 
    <br>
    <%= f.label :location, :class => "form-label" %>
    <%= f.country_select :location,:class => "form-control" %> 
    <br>
    <%= f.label :image %>
    <%= f.file_field :image, :multiple => false %> 
    <br>
    <br>


    <%= f.submit %>
    <br>

<% end %>