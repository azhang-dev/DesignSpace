<%= form_for @user do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: 'Password' %>
    <br>
    <%= f.label :password, 'Confirm Password'%>
    <%= f.password_field :password_confirmation, placeholder: 'Confirm Password' %>
    <br>
    <%= f.label :name %>
    <%= f.text_field :name %> 
    <br>
    <%= f.label :studio %>
    <%= f.text_field :studio %> 
    <br>
    <%= f.label :location %>
    <%= f.country_select :location %> 
    <br>


    <%= f.submit %>

<% end %>