<!DOCTYPE html>
<html>
  <head>
    <title>DesignSpace</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav>
      <h1>
      <%= link_to 'DesignSPACE', root_path, class:'web_logo' %>
      </h1>

       <% if @current_user.present? %>
         Welcome, <%= @current_user.name %>
         <%= link_to 'Libraries', libraries_path %>
         |
         <%= link_to 'New Library', new_library_path %>
         |
         <%= link_to 'Projects Index', projects_path %>
         |
         <%= link_to 'New Project', new_project_path %>
         |
         <%= link_to 'Logout', login_path, method: 'delete' %>
       <% else %>
         <%= link_to 'Login', login_path %>
         |
         <%= link_to 'Sign Up', '/does-not-exist-yet' %>
       <% end %>

       



      <hr>
    </nav>

    <%= yield %>

    <footer>
      <hr>
      &copy; DesignSPACE 2022
    </footer>

  </body>
</html>